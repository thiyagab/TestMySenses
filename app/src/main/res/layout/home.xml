<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.droidapps.testmysenses.Chronometer
        android:id="@+id/chronometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="72sp"
        android:text="00:00 000"
        android:gravity="center"
        android:layout_above="@id/chart1"
        android:layout_marginBottom="20dp"
        />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="30dp"
        android:layout_centerInParent="true"
         />


    <ImageButton
        android:id="@+id/start"
        android:background="@android:drawable/ic_media_play"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        />



    <com.xw.repo.BubbleSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        app:bsb_bubble_color="@android:color/holo_orange_dark"
        app:bsb_bubble_text_color="@color/colorPrimaryDark"
        app:bsb_max="100.0"
        app:bsb_min="0"
        app:bsb_progress="10"
        app:bsb_second_track_color="@android:color/holo_orange_dark"
        app:bsb_section_count="5"
        app:bsb_section_text_position="bottom_sides"
        app:bsb_show_progress_in_float="true"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        app:bsb_track_color="@android:color/holo_orange_light"/>
</RelativeLayout>